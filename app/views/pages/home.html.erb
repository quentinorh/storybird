<% @videos.each do |video| %>
  <div class="video-card">
    <% if user_signed_in? %>
      <div class="", data-controller="tag" data-action="click->tag#destroyVideo" data-tag_id_value="<%=video[:public_id]%>">
      <%= image_tag "trash2.svg", :class => "delete-video-button nav-button" %>
      </div>
      <% if video[:is_favorite] %>
        <%= link_to "", class: "remove-tag-button nav-button", data: { controller: "tag", action: "click->tag#removeTag", tag_id_value: video[:public_id]} do %><% end %>
      <% else %>
        <%= link_to "", class: "add-tag-button nav-button", data: { controller: "tag", action: "click->tag#addTag", tag_id_value: video[:public_id]} do %><% end %>
      <% end %>
    <% end %>

    <div class="bottom-video-card">
      <p><%= video[:created_at].to_time.strftime("%d/%m/%Y %H:%M") %></p>
    </div>
  </div>
<% end %>

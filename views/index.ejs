<!DOCTYPE html>
<html lang="fr">
<head>
    <title>Storybird - Mangeoire Connectée</title>
    <%- include('partials/head') %>
    <link rel="stylesheet" href="css/video.css">
    <link rel="stylesheet" href="css/toast.css">
</head>
<body>
    <%- include('partials/header-buttons') %>
    
    <div class="container">
        <header>
            <div class="header-logo">
                <a href="/">
                    <img src="images/logo3.png" alt="Storybird" class="logo-img">
                </a>
            </div>
            <div class="filters">
                <button id="btn-all" class="filter-btn active">
                    <span>Toutes les vidéos</span>
                </button>
                <button id="btn-favorites" class="filter-btn">
                    <span>Mes favoris</span>
                </button>
                <a href="/live" class="filter-btn" id="btn-live">
                    <span>En direct</span>
                </a>
            </div>
        </header>

        <main>
            <div id="loading" class="loading">
                <div class="spinner"></div>
                <p>Chargement des vidéos...</p>
            </div>
            <div id="error" class="error" style="display: none;"></div>
            <div id="videos-container" class="videos-container"></div>
            <div id="empty-state" class="empty-state" style="display: none;">
                <p>Aucune vidéo trouvée</p>
                <p style="font-size: 14px; margin-top: 8px; opacity: 0.7;">Les oiseaux vont bientôt arriver !</p>
            </div>
        </main>
    </div>

    <%- include('partials/toast') %>

    <!-- Modale de confirmation -->
    <div id="modal-confirm" class="modal">
        <div class="modal-overlay"></div>
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Confirmation</h2>
            </div>
            <div class="modal-body">
                <p id="modal-confirm-message"></p>
                <div id="modal-confirm-loading" class="modal-loading" style="display: none;">
                    <div class="modal-spinner"></div>
                    <p>Suppression en cours...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button id="modal-confirm-cancel" class="modal-btn modal-btn-cancel">Annuler</button>
                <button id="modal-confirm-ok" class="modal-btn modal-btn-primary">Confirmer</button>
            </div>
        </div>
    </div>

    <!-- Modale d'alerte -->
    <div id="modal-alert" class="modal">
        <div class="modal-overlay"></div>
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Information</h2>
            </div>
            <div class="modal-body">
                <p id="modal-alert-message"></p>
            </div>
            <div class="modal-footer">
                <button id="modal-alert-ok" class="modal-btn modal-btn-primary">OK</button>
            </div>
        </div>
    </div>

    <!-- Modale de prompt -->
    <div id="modal-prompt" class="modal">
        <div class="modal-overlay"></div>
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Information</h2>
            </div>
            <div class="modal-body">
                <p id="modal-prompt-message"></p>
                <input type="text" id="modal-prompt-input" class="modal-input" />
            </div>
            <div class="modal-footer">
                <button id="modal-prompt-cancel" class="modal-btn modal-btn-cancel">Annuler</button>
                <button id="modal-prompt-ok" class="modal-btn modal-btn-primary">OK</button>
            </div>
        </div>
    </div>

    <%- include('partials/modal-info') %>

    <!-- Modale d'édition -->
    <div id="modal-edit" class="modal">
        <div class="modal-overlay"></div>
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Éditer la vidéo</h2>
            </div>
            <div class="modal-body">
                <label for="modal-edit-title" class="modal-label">Titre</label>
                <input type="text" id="modal-edit-title" class="modal-input" placeholder="Titre de la vidéo" />
                <label for="modal-edit-description" class="modal-label">Description</label>
                <textarea id="modal-edit-description" class="modal-textarea" placeholder="Description de la vidéo" rows="4"></textarea>
                <div id="modal-edit-loading" class="modal-loading" style="display: none;">
                    <div class="modal-spinner"></div>
                    <p>Enregistrement en cours...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button id="modal-edit-cancel" class="modal-btn modal-btn-cancel">Annuler</button>
                <button id="modal-edit-ok" class="modal-btn modal-btn-primary">Enregistrer</button>
            </div>
        </div>
    </div>

    <%- include('partials/modal-settings') %>
    <%- include('partials/scroll-top') %>

    <script src="js/script.js"></script>
    <%- include('partials/scripts') %>
</body>
</html>

